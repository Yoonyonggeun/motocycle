extends main.pug

block content
  .user-profile
    .user-profile__header
      img.u-avatar(src=user.avatarUrl || user.profile_image)
      h4.profile__username=user.name || user.nickname
    if user.id === loggedUser.id
        .user-profile__btns
          a(href=`/users${routes.editProfile}`)
            button ✏️ Edit Profile
          a(href=`/users${routes.changePassword}`)
            button 🔒 Change Password 